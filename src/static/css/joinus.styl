.joinus_list_header
  responsiveStyle(display, block, flex)
  cursor: pointer
  justify-content: center;
  responsiveStyle(position, static, relative)
  &:before
    position: absolute
    content: ''
    width: 140px
    height: 1px
    background: #7e7e7e
    left: 0
    top: 28px
  &:after
    position: absolute
    content: ''
    width: 140px
    height: 1px
    background: #7e7e7e
    right: 0
    top: 28px
  li
    responsiveStyle(padding, 0.6rem 2rem, 10px 30px)
    responsiveStyle(margin, 0, 0 15px)
    responsiveStyle(background, #f5f5f5, none)
    responsiveStyle(border-bottom, 1px solid #ddd, none)
    text-align: center
    border-radius: 5px
    color: #7e7e7e
    responsiveStyle(font-size, 1rem, 26px)
    &:hover, &.active
      background: #20b7fe
      color: #fff

.join_content_box
  margin-top: 50px
  .list_story
    responsiveStyle(display, block, flex)
    flex-wrap: wrap
    box-sizing: border-box
    div
      responsiveStyle(width, 100%, calc(100%/3))
      responsiveStyle(padding, 0, 0 45px 15px 0)
      responsiveStyle(margin, 0 0 1rem 0, 0)
      text-align: center
      responsiveStyle(font-size, .8rem, 16px)
      responsiveStyle(border-bottom, 1px solid #ddd, none)
      img 
        width: 100%;
        height: 222px;
        margin: 0 auto
      a
        display: block
        font-size: 16px
        line-height: 40px
        text-decoration: underline
        cursor: pointer
        color: #000
      p
        width: 100%
        text-align: left
        overflow : hidden
        text-overflow: ellipsis
        display: -webkit-box
        -webkit-line-clamp: 2
        -webkit-box-orient: vertical