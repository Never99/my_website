#Waterfall
  width: 100%
  height: 100%
  background: #ddd url(../images/waterfall/bg.jpg) repeat
  img 
    border: none
  a 
    text-decoration: none
    color: #444
  a:hover 
    color: #999
  .head_fall
    h2
      text-align: center
      line-height: 80px

  .wrap 
    width: auto
    height: auto
    margin: 0 auto
    position: relative
    .box 
      padding: 10px
      border: none
      float: left
      .info 
        width: 280px
        height: auto
        border-radius: 8px
        box-shadow: 0 0 11px #666
        background: #fff
        .title
          width: 260px
          height: 40px
          margin: 0 auto
          line-height: 40px
          text-align: center
          color: #666
          font-size: 18px
          font-weight: bold
          overflow: hidden
        .pic
          width: 260px
          height: auto
          margin: 0 auto
          padding-top: 10px
          img
            width: 260px
            border-radius: 3px
        .pic:hover
          -webkit-animation: shade 3s ease-in-out 1
          -moz-animation: shade 3s ease-in-out 1
          -ms-animation: shade 3s ease-in-out 1
          -o-animation: shade 3s ease-in-out 1
          animation: shade 3s ease-in-out 1

@-webkit-keyframes shade {
  from {
    opacity: 1;
  }

  15% {
    opacity: 0.4;
  }

  to {
    opacity: 1;
  }
}

@-moz-keyframes shade {
  from {
    opacity: 1;
  }

  15% {
    opacity: 0.4;
  }

  to {
    opacity: 1;
  }
}

@-ms-keyframes shade {
  from {
    opacity: 1;
  }

  15% {
    opacity: 0.4;
  }

  to {
    opacity: 1;
  }
}

@-o-keyframes shade {
  from {
    opacity: 1;
  }

  15% {
    opacity: 0.4;
  }

  to {
    opacity: 1;
  }
}

@keyframes shade {
  from {
    opacity: 1;
  }

  15% {
    opacity: 0.4;
  }

  to {
    opacity: 1;
  }
}
